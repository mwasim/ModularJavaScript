@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<div id="dvSearchForm" class="form-horizontal">
    <div clas="row">
        <div class="col-md-3">
            <div class="form-group">
                <div class="input-group">
                    <input type="text" id="searchTerm" value="" placeholder="Please enter search term" class="form-control" />
                    <div class="input-group-addon">
                        <input type="button" id="btnSearch" value="Search" class="btn btn-primary btn-xs" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div id="dvProducts"></div>

        <div id="dvNotFound" class="alert alert-info hidden">
            <p>
                Your search did not match any products.
            </p>
            <br />
            <h4>Suggestions:</h4>

            <ul>
                <li>Try different keywords.</li>
                <li>Try more general keywords.</li>
                <li>Try fewer keywords.</li>
            </ul>

        </div>
    </div>
</div>

<script type="text/template" id="tplProducts">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {{#Products}}
            <tr>
                <td>{{Id}}</td>
                <td>{{Name}}</td>
                <td>{{Price}}</td>
            </tr>
            {{/Products}}
        </tbody>
    </table>
</script>

@section scripts
{
    <script src="~/Scripts/mustache.js"></script>
    <script src="~/Scripts/app/ProductService.js"></script>
    <script src="~/Scripts/app/ProductController.js"></script>
    <script src="~/Scripts/app/app.js"></script>
    <script>
        $(function () {

            var emptyResultContainer = $("#dvNotFound");
            var productsContainer = $("#dvProducts");
            var btnSearch = $("#btnSearch");
            var inputSearchTerm = $("#searchTerm");
            var productsTemplate = $("#tplProducts");

            ProductsController.init(emptyResultContainer, productsContainer, btnSearch, inputSearchTerm, productsTemplate);
        });
    </script>
}
